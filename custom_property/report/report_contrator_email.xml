<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="custom_property_contrato_report">
			<t t-call="web.html_container">
				<t t-call="web.external_layout">
					<div class="page">
						<!--inici codigo-->
						
						<h1 style="text-align:center;"><strong> DETALLES DE CONTRATO</strong></h1>
						<div class="row">
							<div class="col-3">
									<strong>Contrato</strong>: <t t-esc="doc.name"/>
							</div>
							<div class="col-3">
									<br/><t t-esc="doc.code"/>
							</div>
						</div>					  
					  <section class="row">
					  	  <h4>Informacion de propiedad</h4> 
							<br/>	
							<div class="col-6">
									<strong>Propiedad</strong>
									<t t-esc="doc.property_id.name"/><br/>
									<strong>Gerente de cuenta</strong>
									<t t-esc="doc.manager_id.name"/><br/>
									<strong>Moneda</strong><br/>
									<t t-ecc="doc.currency_id.name"/>
							</div>
							<div class="col-6">
								<strong>Inquilino</strong>
								<t t-esc="doc.tenant_id.name"/><br/>
								<strong>Gerente de cuenta</strong>
								<t t-esc="doc.company_id.name"/><br/>
									
							</div>

           			</section>
           			 <section class="row">
					  	  <h4>Informacion sobre el alquiler</h4> 
							<br/>	
							<div class="col-6">
									<strong>Alquiler de la propiedad</strong>: <t t-esc="doc.rent"/><br/>
									<strong>Importe depositado</strong>: <t t-esc="doc.deposit"/><br/>
									<strong>¿Depósito recibido?</strong>: <t t-esc="doc.deposit_received"/><br/>
									<strong>Contacto</strong>: <t t-esc="doc.contact_id"/><br/>
									<strong>Check in</strong>: <t t-esc="doc.chech_in"/><br/>
									<strong>Check out</strong>: <t t-esc="doc.chech_out"/><br/>
							</div>
							<div class="col-6">
								<strong>Fecha</strong><br/>
									<t t-esc="doc.ten_date"/>
									<strong>Depósito devuelto</strong>: <t t-esc="doc.amount_return"/><br/>
									<strong>Consto de mantenimiento</strong>: <t t-esc="doc.main_cost"/><br/>
									<strong>Entrega de accesos</strong>: <t t-esc="doc.entrega_acceso_id.name"/><br/>
										<strong>Correo</strong>: <t t-esc="doc.email"/><br/>
									<strong>Telefono</strong>: <t t-esc="doc.telefono"/><br/>
									
							</div>

           			</section>
           			 <section class="row">
					  	  <h4>Informacion de contrato</h4> 
							<br/>	
							<div class="col-6">
									<strong>Fecha de inicio</strong>: <t t-esc="doc.date_start"/><br/>
									<strong>tipo de alquiler</strong>: <t t-esc="doc.rent_type_id.name"/><br/>
									
							</div>
							<div class="col-6">
								<strong>Fecha de caducidad</strong>: <t t-esc="doc.date"/><br/>
									<strong>Alquiler total</strong>: <t t-esc="doc.total_rent"/><br/>
									
							</div>

           			</section>
           			 <!-- <div class="row">
					  	  <h4>Informacion de la comisión</h4> 
								
							<div t-if="doc.commission" class="col-6">
									<strong>Comisión</strong><br/>
									<t t-esc="doc.commission"/>
									
							</div>

           			</div> -->
           			<section class="row">
					  	  <h4>Informacion de la Penalizaciones</h4> 
							<br/>	
							<div class="col-6">
									<strong>Multa %</strong>: <t t-esc="doc.penalty"/><br/>
									
							</div>
								<div class="col-6">
									<strong>Recuento de multas por dia</strong>: <t t-esc="doc.penalty_day"/><br/>
									
							</div>

           			</section>
           			<section>
					<h4>Horario de alquiler</h4>
					<br/>
           			<table class="table table-sm table-bordered">
						<thead>
							<tr>
							<th>#</th>	
							<th>Fecha</th>
							<th>Cantidad</th>
							<th>Cantidad de penalizacion</th>
							<th>Cantidad Pendiente</th>
							<th>Detalle de cheque</th>
							<th>Factura</th>
							<th>Notas</th>
							<th>Pagados</th>
							<th>Publicada</th>
						</tr>
						</thead>
						<tbody>
							<t t-foreach="doc.rent_schedule_ids" t-as="temp">
							<tr>
							<td><t t-esc="temp.hecho_pago"/></td>	
							<td><t t-esc="temp.start_date"/></td>
							<td><t t-esc="temp.amount" t-options="{'widget': 'monetary','display_currency':doc.currency_id}"/></td>
							<td><t t-esc="temp.penalty_amount"/></td>
							<td><t t-esc="temp.pen_amt"/></td>
							<td><t t-esc="temp.cheque_detail"/></td>
							<td><t t-esc="temp.invc_id"/></td>
							<td><t t-esc="temp.note"/></td>
							<td><t t-esc="temp.move_check"/></td>
							<td><t t-esc="temp.inv"/></td>
						  </tr>
						  </t>
						</tbody>
					</table>
					</section>
					<section>
					<h4>Mantenimiento periódico</h4>
					<br/>
					<table class="table table-sm table-bordered">
						<thead>
							<tr>
							<th>Tipo de mantenimiento</th>
							<th>Costo</th>
						</tr>
						</thead>
						<tbody>
							<t t-foreach="doc.cost_id" t-as="temp">
							<tr>
							<td><t t-esc="temp.maint_type.name"/></td>	
							<td><t t-esc="temp.cost"/></td>
						  </tr>
						  </t>
						</tbody>
					</table>
					</section>

           			<section class="row">
					
							<div class="col-6">
									<strong>Terminos y condiciones %</strong>: 
									<t t-esc="doc.description"/><br/>
									
							</div>
								<div class="col-6">
									<strong>Notas</strong>: 
									<t t-esc="doc.duration_cover"/><br/>
									
							</div>

           			</section>

					

					</div>
				</t>
			</t>
		</template>
		</data>
</odoo>
