<odoo>
<template id="tenant_details" name="My tenant details">
<t t-call="portal.frontend_layout">
        <div class="container border">
            <!--inici codigo-->
            
						<h1 style="text-align:center;"><strong> DETALLES DE CONTRATO</strong></h1>
						<div class="row">
							<div class="col-3">
									<strong>Contrato</strong>
									<t t-esc="contrato.name"/><br/>
							</div>
							<div class="col-3">
									<br/><t t-esc="contrato.code"/>
							</div>
						</div>
					  <div class="row">
					  	  <h4>Informacion de propiedad</h4> 
								
							<div class="col-6">
									<strong>Propiedad</strong>
									<t t-esc="contrato.property_id.name"/><br/>
									<strong>Gerente de cuenta</strong>
									<t t-esc="contrato.manager_id.name"/><br/>
									<strong>Moneda</strong>
									<t t-ecc="contrato.currency_id.name"/><br/>
							</div>
							<div class="col-6">
								<strong>Inquilino</strong>
									<t t-esc="contrato.tenant_id.name"/><br/>
									<strong>Gerente de cuenta</strong>
									<t t-esc="contrato.company_id.name"/><br/>
									
							</div>

           			</div>
           			 <div class="row">
					  	  <h4>Informacion sobre el alquiler</h4> 
								
							<div class="col-6">
									<strong>Alquiler de la propiedad</strong>
									<t t-esc="contrato.rent"/><br/>
									<strong>Importe depositado</strong>
									<t t-esc="contrato.deposit"/><br/>
									<strong>¿Depósito recibido?</strong>
									<t t-esc="contrato.deposit_received"/><br/>
									<strong>Contacto</strong>
									<t t-esc="contrato.contact_id.name"/><br/>
									<strong>Check in</strong>
									<t t-esc="contrato.chech_in"/><br/>
									<strong>Check out</strong>
									<t t-esc="contrato.chech_out"/><br/>
							</div>
							<div class="col-6">
								<strong>Fecha</strong>
									<t t-esc="contrato.ten_date"/><br/>
									<strong>Depósito devuelto</strong>
									<t t-esc="contrato.amount_return"/><br/>
										<strong>Consto de mantenimiento</strong>
									<t t-esc="contrato.main_cost"/><br/>
									<strong>Entrega de accesos</strong>
									<t t-esc="contrato.entrega_acceso_id.name"/><br/>
										<strong>Correo</strong>
									<t t-esc="contrato.email"/><br/>
									<strong>Telefono</strong>
									<t t-esc="contrato.telefono"/><br/>
									
							</div>

           			</div>
           			 <div class="row">
					  	  <h4>Informacion de contrato</h4> 
								
							<div class="col-6">
									<strong>Fecha de inicio</strong>
									<t t-esc="contrato.date_start"/><br/>
									<strong>tipo de alquiler</strong>
									<t t-esc="contrato.rent_type_id.name"/><br/>
									
							</div>
							<div class="col-6">
								<strong>Fecha de caducidad</strong>
									<t t-esc="contrato.date"/><br/>
									<strong>Alquiler total</strong>
									<t t-esc="contrato.total_rent"/><br/>
									
							</div>

           			</div>
           			 <!-- <div class="row">
					  	  <h4>Informacion de la comisión</h4> 
								
							<div t-if="contrato.commission" class="col-6">
									<strong>Comisión</strong><br/>
									<t t-esc="contrato.commission"/>
									
							</div>

           			</div> -->
           			<div class="row">
					  	  <h4>Informacion de la Penalizaciones</h4> 
								
							<div class="col-6">
									<strong>Multa %</strong>
									<t t-esc="contrato.penalty"/><br/>
									
							</div>
								<div class="col-6">
									<strong>Recuento de multas por dia</strong>
									<t t-esc="contrato.penalty_day"/><br/>
									
							</div>

           			</div>
           			<div>Horario de alquiler</div>
           			<table class="table table-sm table-bordered">
						<thead>
							<tr>
							<th>#</th>	
							<th>Fecha</th>
							<th>Cantidad</th>
							<th>Cantidad de penalizacion</th>
							<th>Cantidad Pendiente</th>
							<th>Detalle de cheque</th>
							<th>Factura</th>
							<th>Notas</th>
							<th>Pagados</th>
							<th>Publicada</th>
						</tr>
						</thead>
						<tbody>
							<t t-foreach="contrato.rent_schedule_ids" t-as="temp">
							<tr>
							<td><t t-esc="temp.hecho_pago"/></td>	
							<td><t t-esc="temp.start_date"/></td>
							<td><t t-esc="temp.amount" t-options="{'widget': 'monetary','display_currency':contrato.currency_id}"/></td>
							<td><t t-esc="temp.penalty_amount"/></td>
							<td><t t-esc="temp.pen_amt"/></td>
							<td><t t-esc="temp.cheque_detail"/></td>
							<td><t t-esc="temp.invc_id"/></td>
							<td><t t-esc="temp.note"/></td>
							<td><t t-esc="temp.move_check"/></td>
							<td><t t-esc="temp.inv"/></td>
						  </tr>
						  </t>
						</tbody>
					</table>
					<div>Mantenimiento periódico</div>
					<table class="table table-sm table-bordered">
						<thead>
							<tr>
							<th>Tipo de mantenimiento</th>
							<th>Costo</th>
						</tr>
						</thead>
						<tbody>
							<t t-foreach="contrato.cost_id" t-as="temp">
							<tr>
							<td><t t-esc="temp.maint_type"/></td>	
							<td><t t-esc="temp.cost"/></td>
						  </tr>
						  </t>
						</tbody>
					</table>

           			<div class="row">
					
							<div class="col-6">
									<strong>Terminos y condiciones %</strong>
									<t t-esc="contrato.description"/><br/>
									
							</div>
								<div class="col-6">
									<strong>Notas</strong>
									<t t-esc="contrato.duration_cover"/><br/>
									
							</div>

           			

          </div>
        </div>
</t>
</template>
</odoo>