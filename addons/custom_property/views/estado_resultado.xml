<odoo>
	<data>
		<!--+++++++++++++++++++++++++++++++++FORM+++++++++++++++++++++++++++++++++++++--> 
	    <record model="ir.ui.view" id="custom_estado_resultado_from_view">
	            <field name="name">custom_estado_resultado.form_view</field>
	            <field name="model">estado.result</field>
	            <field name="arch" type="xml">
	                <form>
	                    <sheet>
	                    	<field name="imagen" widget="image" class="oe_avatar" options="{'size': [120, 120]}" nolabel="1"/>
	                    	<group string="Selecciona Mes">
	                    		<field name="consulta_mes"/>
	                    	</group>
	                        <group>
	                            <group string="General">
	                                <field name="property_id" readonly="1"/>
	                                <field name="company_id" string="CompaÃ±ia"/>
	                                <field name="currency_id" string="Moneda"  invisible="1"/>
	                                <field name="fecha_report" readonly="1"/>
	                                <field name="manager_id"/>
	                                <field name="owner_id"/>
	                            </group>
	                            <group string="Gastos">
		                            <field name="mantenimientos"  widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
		                            <field name="servicios"  widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
		                            <field name="otros_gastos"  widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>   
		                            <field name="hao"  widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>       
									<field name="ingresos_netos" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>     
	                            </group>
	                        </group>
	                         <group>
	                         	 <group string="Rentas">
	                                 <field name="rent_cronograma"  widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
	                                 <field name="rent_efectivo"  widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>	
	                              </group>
	                              <group string="Ocupacion">
	                        	   <field name="ocupacionlibre" readonly="1"/>
	                               <field name="ocupacionnl" readonly="1"/>	                            	
	                        	</group>
	                        	 <group string="Historico">
                        	   <field name="rent_cobradas"  widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
	                           <field name="rent_por_cobrar"  widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>	                            	
	                          </group>   
	                         </group>
	                        
	                        
	                    </sheet>
	                </form>
	                
	            </field>
	    </record>


	 <!--++++++++++++++++++++++++++++TREE++++++++++++++++++++++++++++++++++++++++-->
	  <record id="custom_estado_resultado_tree" model="ir.ui.view">
	    <field name="name">custom_estado_resultado.tree</field>
	    <field name="model">estado.result</field>
	    <field name="arch" type="xml">
	    	<tree>
	    		<field name="fecha_report"/>
	    		<field name="property_id"/>
	    		<field name="enviado"/>	    		

	    	</tree>
	    </field>
	   </record>


	
	
	</data>
</odoo>